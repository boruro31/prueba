<odoo>
    <template id="report_invoice_company2">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">

                    <!-- Encabezado con logo -->
                    <div class="row mb16">
                        <div class="col-12 text-center">
                            <img t-att-src="'/prueba/static/src/img/logo_empresa2.png'"
                                 style="width:160px; margin-bottom:10px;"/>
                            <h2>Factura Especial - <t t-esc="o.company_id.name"/></h2>
                        </div>
                    </div>

                    <!-- Datos del cliente -->
                    <div class="row mb16">
                        <div class="col-6">
                            <strong>Cliente:</strong>
                            <span t-esc="o.partner_id.name"/>
                        </div>
                        <div class="col-6 text-right">
                            <strong>Fecha:</strong>
                            <span t-esc="o.invoice_date"/>
                        </div>
                    </div>

                    <!-- Tabla de lÃ­neas -->
                    <table class="table table-sm o_main_table">
                        <thead>
                            <tr>
                                <th>Producto</th>
                                <th>Cantidad</th>
                                <th>Precio Unitario</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.invoice_line_ids" t-as="line">
                                <td><span t-esc="line.product_id.display_name"/></td>
                                <td class="text-right"><span t-esc="line.quantity"/></td>
                                <td class="text-right"><span t-esc="line.price_unit"/></td>
                                <td class="text-right"><span t-esc="line.price_subtotal"/></td>
                            </tr>
                        </tbody>
                    </table>

                    <!-- Totales -->
                    <div class="text-right mt16">
                        <p><strong>Total:</strong> <span t-esc="o.amount_total"/></p>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>